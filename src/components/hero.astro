---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="1:1"
      sizes="(max-width: 200px) 100vw, 420px"
      loading="eager"
      format="avif"
      style={{ "border-radius": "0.5rem" }}
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      FeedFrenzy
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Get control of your most favorite RSS feeds. Sync all your feeds and
      articles with iCloud, read anywhere, anytime. FeedFrenzy comes with a
      Reader view that allows for a clutter-free experience
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://apple.com"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxl-apple" />
        Apple Appstore
      </Link>
    </div>
  </div>
</main>
